<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:layout_marginLeft="20dp"   xmlns:tools="http://schemas.android.com/tools" tools:context=".CalendarFragment">

    <TextView
        android:id="@+id/textView2"
        android:textColor="#045268"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@+string/add_calendar"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/finalDesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@+string/final_destination"
        android:inputType="textPostalAddress"
        android:paddingTop="30dp" >

        <requestFocus />
    </EditText>
	
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="153dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <TimePicker
            android:id="@+id/arrivalText"
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:scaleX="0.8"
            android:scaleY="0.8" />

        <TimePicker
            android:id="@+id/timeDepText"
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:scaleX="0.8"
            android:scaleY="0.8" />

	 </LinearLayout>
   

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:text="@+string/time_window"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <SeekBar
        android:id="@+id/timeWindowBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="30"
        android:paddingTop="10dp"
        android:progress="15" />

    <Button
        android:id="@+id/addButton"
        style="@drawable/drawer_shadow"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:text="@+string/add_button" />

</LinearLayout>
